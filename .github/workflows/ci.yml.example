# Example CI workflow configuration
# Copy this to .github/workflows/ci.yml and customize as needed

name: CI

on:
  push:
    branches: [main, develop]
  pull_request:
    branches: [main, develop]

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
      - uses: actions/checkout@v3

      - name: Setup Node.js
        uses: actions/setup-node@v3
        with:
          node-version: '18'
          cache: 'npm'

      - name: Install dependencies
        run: npm ci

      - name: Generate template types
        run: npm run generate:templates

      - name: Validate notification listeners
        run: npm run validate:notification-listeners

      - name: Validate notification manifests
        run: npm run validate:notification-manifests

      - name: Build
        run: npm run build

      - name: Lint
        run: npm run lint

      - name: Test
        run: npm test

